<UserControl x:Class="XMonitor_GUI.AP_IDSET_Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="230" Background="#FF5A4D66">
    <StackPanel>
        <GroupBox Header="Aircraft Code Set：" Foreground="White" FontSize="15"  Height="229" >
            <StackPanel>
                <Label  Content="Aircraft Code:" Foreground="White"/>
                <Label  Name="current_AP_ID" Content="Null" Foreground="White"/>
                <Label  Content="Reset Aircraft Code:" Foreground="White"/>
                <TextBox Name="Edit_AP_Name" InputMethod.IsInputMethodEnabled="False"  FontWeight="Light" PreviewTextInput="Edit_AP_Name_PreviewTextInput" PreviewKeyDown="Edit_AP_Name_PreviewKeyDown" />
                <Button Content="Set Code" Name="AP_Code_Set" Margin="33,10,47,0"  Click="AP_Code_Set_Click"></Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
